# Пример файла окружения для чатбота ВОККДЦ
# Скопируйте этот файл в .env и настройте под свои нужды

# Настройки Flask-сервера
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# Настройки CORS
CORS_ORIGINS=*
# Для продакшена используйте конкретные домены:
# CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Настройки LM Studio
LM_STUDIO_URL=http://localhost:1234
LM_STUDIO_MODEL=llama-3.2-3b-instruct

# Настройки RAG-системы
RAG_KNOWLEDGE_BASE_PATH=knowledge_base/vodc_complete_info.md
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5

# Настройки безопасности
SECRET_KEY=your-secret-key-here
SESSION_TIMEOUT=3600

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=logs/chatbot.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Настройки производительности
MAX_WORKERS=4
REQUEST_TIMEOUT=30
CACHE_SIZE=1000

# Настройки 1С-Битрикс
BITRIX_COMPONENT_PATH=/local/components/vodc/chatbot/
BITRIX_TEMPLATE_PATH=/local/templates/vodc_chatbot/

# Настройки Docker (если используется)
DOCKER_NETWORK=vodc-network
DOCKER_VOLUME_PATH=/opt/vodc-chatbot