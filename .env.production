# Продакшен конфигурация для vodc.ru
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# CORS для vodc.ru и поддоменов
CORS_ORIGINS=https://vodc.ru,https://www.vodc.ru,https://*.vodc.ru

# Настройки LM Studio (если используется)
LM_STUDIO_URL=http://localhost:1234
LM_STUDIO_MODEL=llama-3.2-3b-instruct

# Настройки RAG-системы
RAG_KNOWLEDGE_BASE_PATH=knowledge_base/vodc_complete_info.md
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5

# Безопасность
SECRET_KEY=your-production-secret-key-change-this
SESSION_TIMEOUT=3600

# Логирование
LOG_LEVEL=INFO
LOG_FILE=logs/chatbot.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Производительность
MAX_WORKERS=4
REQUEST_TIMEOUT=30
CACHE_SIZE=1000